{
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Set Prettier as default formatter
    "editor.formatOnSave": true, // Automatically format on save
    "editor.formatOnPaste": true, // Automatically format when pasting
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Ensure Prettier for TypeScript
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode" // Ensure Prettier for JSON
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker" // Use Docker formatter
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
}